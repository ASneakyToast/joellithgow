---
import { getCollection } from 'astro:content';
import BaseLayout from '@components/common/BaseLayout.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Sort posts by publish date (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Calculate link collection stats
const linkCollectionPosts = allPosts.filter(post => post.data.links && post.data.links.length > 0);
const totalLinks = linkCollectionPosts.reduce((sum, post) => sum + (post.data.links?.length || 0), 0);

const pageTitle = "Blog";
const pageDescription = "Reflections on web development, AI tools, creative projects, and lessons learned along the way.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="blog-container">
    <div class="blog-wrapper">
      <header class="blog-header">
        <div class="badge">reflections & insights</div>
        <h1 class="blog-title">Blog</h1>
        <p class="blog-description">{pageDescription}</p>
      </header>

      {/* Links collection showcase */}
      {totalLinks > 0 && (
        <section class="links-showcase">
          <div class="links-showcase-content">
            <p class="links-showcase-text">
              ðŸ“Ž {totalLinks} curated links from {linkCollectionPosts.length} collection{linkCollectionPosts.length !== 1 ? 's' : ''}
            </p>
            <a href="/links" class="browse-links-btn">
              Browse Links â†’
            </a>
          </div>
        </section>
      )}

      {sortedPosts.length > 0 ? (
        <div class="blog-posts">
          {sortedPosts.map((post) => (
            <article class="blog-post-card">
              <div class="post-content">
                <time 
                  datetime={post.data.publishDate.toISOString()}
                  class="post-date"
                >
                  {post.data.publishDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                
                <h2 class="post-title">
                  <a
                    href={`/blog/${post.slug}`}
                    class="post-title-link"
                  >
                    {post.data.title}
                  </a>
                  {post.data.category === 'link-collection' && (
                    <span class="link-collection-badge">
                      {post.data.links?.length || 0} links
                    </span>
                  )}
                </h2>
                
                <p class="post-excerpt">
                  {post.data.description}
                </p>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <span class="tag">#{tag}</span>
                    ))}
                  </div>
                )}
                
                <div class="post-meta">
                  <span class="post-author">
                    By {post.data.author}
                    {post.data.readingTime && (
                      <span> â€¢ {post.data.readingTime} min read</span>
                    )}
                  </span>
                  
                  <a 
                    href={`/blog/${post.slug}`}
                    class="read-more-btn"
                  >
                    Read more â†’
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-message">
            <div class="badge">coming soon</div>
            <p>No blog posts published yet. Check back soon!</p>
          </div>
        </div>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  /* Clean, traditional blog styling */
  .blog-container {
    min-height: 100vh;
    background: var(--bg-primary);
    color: var(--text-primary);
    padding: 3rem 2rem;
  }

  .blog-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .blog-header {
    text-align: left;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--gradient-primary-subtle);
  }

  .badge {
    display: inline-block;
    background: var(--gradient-primary-subtle);
    color: var(--accent-primary);
    padding: 0.35rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    border-radius: 4px;
  }

  .blog-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    margin: 0.5rem 0 1rem 0;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .blog-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  /* Links showcase section */
  .links-showcase {
    background: var(--bg-secondary);
    border: 1px solid var(--gradient-primary-subtle);
    border-radius: 8px;
    margin: 0 0 3rem 0;
    padding: 1.25rem 1.5rem;
  }

  .links-showcase-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .links-showcase-text {
    color: var(--text-secondary);
    margin: 0;
    font-size: 0.95rem;
  }

  .browse-links-btn {
    background: var(--accent-primary);
    color: var(--text-light);
    padding: 0.5rem 1rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .browse-links-btn:hover {
    background: var(--accent-secondary);
    transform: translateY(-1px);
  }

  .blog-posts {
    display: grid;
    gap: 2.5rem;
  }

  .blog-post-card {
    background: var(--bg-secondary);
    border: 1px solid var(--gradient-primary-subtle);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .blog-post-card:hover {
    border-color: var(--gradient-primary-dim);
    box-shadow: var(--shadow-lg) var(--accent-secondary);
  }

  .post-content {
    position: relative;
  }

  .post-date {
    display: block;
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    letter-spacing: 0.02em;
  }

  .post-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  .post-title-link {
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title-link:hover {
    color: var(--accent-primary);
  }

  .post-excerpt {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 1.25rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .tag {
    background: var(--gradient-primary-subtle);
    color: var(--accent-primary);
    padding: 0.25rem 0.75rem;
    font-size: 0.8rem;
    border-radius: 4px;
    font-weight: 500;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1.25rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--gradient-primary-subtle);
  }

  .post-author {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .read-more-btn {
    color: var(--accent-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .read-more-btn:hover {
    color: var(--accent-secondary);
  }

  .link-collection-badge {
    display: inline-block;
    background: var(--gradient-tertiary-light);
    color: var(--accent-tertiary);
    padding: 0.25rem 0.6rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 4px;
    margin-left: 0.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    margin-top: 2rem;
  }

  .empty-message {
    background: var(--bg-secondary);
    border: 1px solid var(--gradient-primary-subtle);
    border-radius: 12px;
    padding: 3rem;
  }

  .empty-message p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 1rem;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .blog-container {
      padding: 2rem 1.5rem;
    }

    .blog-header {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    .blog-title {
      font-size: 2rem;
    }

    .blog-description {
      font-size: 1rem;
    }

    .links-showcase-content {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .browse-links-btn {
      text-align: center;
    }

    .blog-post-card {
      padding: 1.5rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .read-more-btn {
      align-self: flex-start;
    }
  }

  @media (max-width: 480px) {
    .blog-container {
      padding: 1.5rem 1rem;
    }

    .blog-post-card {
      padding: 1.25rem;
    }

    .post-title {
      font-size: 1.5rem;
    }

    .post-excerpt {
      font-size: 0.95rem;
    }
  }
</style>